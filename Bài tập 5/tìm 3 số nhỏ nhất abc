  
// khoi khai bao
 #include <stdio.h>
int  somin(int a, int b,int c);
// khoi ham main

 int main(){
// khai bao nhap a,b,c tu ban phim
   int a, b, c;
  printf("Nhap vao lan luot a, b, c:  ");
  scanf("%d %d %d", &a , &b , &c );

  
  int i =somin( a, b ,c);
  printf("So nho nhat trong ba so la: %d",  i );
}
   // khoi dinh nghia  ham
   int somin(int a,int b, int c){
   int min = 0;
  // so sanh a , b ,c
if (min > a && min > b && min > c  ){
		min=a;
		min=b;
		min=c;
  }
	return min;
  }
